<!-- HEADER -->
<%- include('partials/head'); %>

<!-- NAVIGATION -->
<%- include('partials/nav'); %>

<div class="container">
  <div class="section is-medium py-0">
    <h1 class="is-size-2 has-text-centered">Sign Up</h1>

    <!-- SIGNUP FORM -->
    <form name="signup" method="POST" id="signup">
      <div class="field">
        <label class="label" for="fname">First Name</label>
        <div class="control">
          <input
            class="input"
            type="text"
            name="fname"
            id="fname"
            placeholder="John"
          />
        </div>
        <div class="help is-size-6"></div>
      </div>

      <div class="field">
        <label class="label" for="lname">Last Name</label>
        <div class="control">
          <input
            id="lname"
            class="input"
            type="text"
            name="lname"
            placeholder="Doe"
          />
        </div>
        <div class="help is-size-6"></div>
      </div>

      <div class="field">
        <label class="label" for="email1">Email</label>
        <div class="control">
          <input
            id="email1"
            class="input"
            type="email"
            name="email"
            placeholder="john.doe@example.com"
          />
        </div>
        <div class="help is-size-6"></div>
      </div>

      <div class="field">
        <label class="label" for="pwd1">Password</label>
        <div class="control">
          <input
            class="input"
            type="password"
            name="pwd"
            id="pwd1"
            placeholder="Minimum 10 characters"
          />
        </div>
        <div class="help is-size-6"></div>
        <div id="pwd-strength"><span></span></div>
        <div id="pwd-suggestions" class="has-success"></div>
      </div>

      <div class="field">
        <label class="label" for="pwd2">Confirm Password</label>
        <div class="control">
          <input class="input" type="password" name="pwdRepeat" id="pwd2" />
        </div>
        <div class="help is-size-6"></div>
      </div>

      <input type="hidden" name="csrf" value="<%= csrf %>" />

      <div class="field">
        <div class="control">
          <label for="showPwd" class="checkbox">
            <input type="checkbox" name="showPwd" id="showPwd" />
            Show Password
          </label>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button
            class="button is-link"
            type="submit"
            formnovalidate="formnovalidate"
            name="btn"
          >
            Submit
          </button>
        </div>
        <div class="help is-size-6"></div>
      </div>
    </form>
    <!-- END SIGNUP FORM -->
  </div>
</div>

<!-- FOOTER -->
<%- include('partials/footer'); %>

<!-- HEADER -->
<%- include('../partials/head'); %>

<!-- NAVIGATION -->
<%- include('../partials/nav'); %>

<!-- MAIN SECTION -->
<div class="section">
  <div class="columns">
    <div class="column is-10 is-offset-1">
      <form name="createBlogPost">
        <div class="field is-horizontal">
          <div class="field-label is-normal"></div>
          <div class="field-body">
            <h1 class="title">Create Blog Post</h1>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label" for="title">Title</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <input
                  class="input"
                  type="text"
                  name="title"
                  id="title"
                  placeholder="Blog Post Title"
                />
              </div>
              <div class="help is-size-6"></div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label" for="description">Description</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <textarea
                  rows="2"
                  class="textarea"
                  name="description"
                  placeholder="Short Description"
                ></textarea>
              </div>
              <div class="help is-size-6"></div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label">Image</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <input
                  class="input"
                  type="text"
                  name="img"
                  placeholder="Image HREF"
                />
              </div>
              <div class="help is-size-6"></div>
            </div>
            <div class="field">
              <div class="control">
                <input
                  class="input"
                  type="text"
                  name="imgAlt"
                  placeholder="Alternate text for image"
                />
              </div>
              <div class="help is-size-6"></div>
            </div>
          </div>
          <div class="help is-size-6"></div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label" for="body">Post Body</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="file">
                <label class="file-label">
                  <input class="file-input" type="file" name="fileUpload" />
                  <span class="file-cta">
                    <span class="file-label">Upload HTML file body</span>
                  </span>
                </label>
              </div>
              <div class="help is-size-6" id="file-select"></div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label" for="Tags">Select Tags</label>
          </div>
          <div class="field-body">
            <div class="select is-multiple">
              <select multiple size="4" name="tags" id="tags">
                <% for (const tag of tags) { %>
                <option value="<%= tag %>"><%= tag %></option>
                <% } %>
              </select>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <label class="label" for="newTags">Add New Tags</label>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <input
                  class="input"
                  type="text"
                  name="newTags"
                  id="newTags"
                  placeholder="Comma seperated tags"
                />
              </div>
              <div class="help is-size-6"></div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label">
            <!-- Left empty for spacing -->
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control">
                <button class="button is-link" type="submit" name="btn">
                  Create Blog Post
                </button>
              </div>
              <div class="help is-size-6"></div>
            </div>
          </div>
        </div>

        <input type="hidden" name="csrf" value="<%= csrf %>" />
      </form>
    </div>
  </div>
</div>
<!-- END MAIN SECTION -->

<!-- FOOTER -->
<%- include('../partials/footer'); %>

<!-- HEADER -->
<%- include('partials/head'); %>

<!-- NAVIGATION -->
<%- include('partials/nav'); %>
<div class="container">
  <div class="section is-medium py-0">
    <h1 class="is-size-2 has-text-centered">Change Password</h1>

    <!-- CHANGEPWD FORM -->
    <form name="changePwd" method="POST" id="changePwd">
      <div class="field">
        <label class="label" for="cpwd">Current Password</label>
        <div class="control">
          <input class="input" type="password" name="cpwd" id="cpwd" />
        </div>
        <div class="help is-size-6"></div>
      </div>

      <div class="field">
        <label class="label" for="pwd">New Password</label>
        <div class="control">
          <input
            class="input"
            type="password"
            name="pwd"
            id="pwd"
            placeholder="Minimum 10 characters."
          />
        </div>
        <div class="help is-size-6"></div>
        <div id="pwd-strength"><span></span></div>
        <div id="pwd-suggestions" class="has-success"></div>
      </div>

      <div class="field">
        <label class="label" for="pwd2">Repeat Password</label>
        <div class="control">
          <input class="input" type="password" name="pwdRepeat" id="pwd2" />
        </div>
        <div class="help is-size-6"></div>
      </div>

      <input type="hidden" name="csrf" value="<%= csrf %>" />

      <div class="field">
        <div class="control">
          <label for="showPwd" class="checkbox">
            <input type="checkbox" name="showPwd" id="showPwd" />
            Show Password
          </label>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button
            class="button is-link"
            type="submit"
            formnovalidate="formnovalidate"
            name="btn"
          >
            Submit
          </button>
        </div>
        <div class="help is-size-6"></div>
      </div>
    </form>
    <!-- END CHANGEPWD FORM -->
  </div>
</div>

<!-- FOOTER -->
<%- include('partials/footer'); %>
